{
    "openapi": "3.1.0",
    "info": {
        "title": "User API Specification",
        "description": "User API Specification",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/users": {
            "post": {
                "description": "Register new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "Jonathan Gunawan": {
                                    "description": "Register user Jonathan Gunawan",
                                    "value": {
                                        "name": "Jonathan Gunawan",
                                        "email": "jonathan@example.com",
                                        "password": "rahasia"
                                    }
                                },
                                "Alex": {
                                    "description": "Register user Alex",
                                    "value": {
                                        "name": "Alex",
                                        "email": "alex@example.com",
                                        "password": "rahasia"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success register new user",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Success": {
                                        "description": "Success register user Jonathan Gunawan",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Jonathan Gunawan",
                                                "email": "jonathan@example.com"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Validation Errors": {
                                        "description": "Validation Error",
                                        "value": {
                                            "errors": {
                                                "message": {
                                                    "email": "Email must not be empty.",
                                                    "password": [
                                                        "Password must not be empty.",
                                                        "Password must be at least 8 characters."
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "Login user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "examples": {
                                "Jonathan Gunawan": {
                                    "description": "Login user Jonathan Gunawan",
                                    "value": {
                                        "email": "jonathan@example.com",
                                        "password": "rahasia"
                                    }
                                }
                            },
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success Login",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Success": {
                                        "description": "Success Login",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "name": "Jonathan Gunawan",
                                                "email": "jonathan@example.com",
                                                "token": "2|abcdefhijklmnopqrstuvwz1234567890"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "description": "Authentication token from Laravel Sanctum"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - Invalid Credentials",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Invalid Credentials": {
                                        "description": "Invalid email or password",
                                        "value": {
                                            "errors": {
                                                "message": "Invalid Credentials"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/current": {
            "get": {
                "description": "Get current authenticated user (Requires Sanctum cookie authentication)",
                "responses": {
                    "200": {
                        "description": "Succes Get current authenticated user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "description": "User is not authenticated",
                                        "value": {
                                            "errors": {
                                                "message": "Unauthenticated"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "description": "Update current authenticated user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - User not authenticated",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "description": "User is not authenticated",
                                        "value": {
                                            "errors": {
                                                "message": "Unauthenticated"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/logout": {
            "delete": {
                "description": "Logout current authenticated user",
                "responses": {
                    "200": {
                        "description": "User logged out successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "message": "OK"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - User not authenticated",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "Unauthorized": {
                                        "description": "User is not authenticated",
                                        "value": {
                                            "errors": {
                                                "message": "Unauthenticated"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/forgot-password": {
            "post": {
                "description": "Send email reset password",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jonathan@example.com"
                                    }
                                },
                                "required": [
                                    "email"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Send reset password link to email successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "message": "Password reset link send successfully"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/reset-password": {
            "post": {
                "description": "Reset user password token required",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jonathan@example.com"
                                    },
                                    "token": {
                                        "type": "string",
                                        "example": "2|abcdefghijklmnopqrstuvwxyz1234567890"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "rahasiaNew"
                                    }
                                },
                                "required": [
                                    "email",
                                    "token",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password has been reset",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "message": "Password has been reset"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "message": "Invalid or expired token"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/change-password": {
            "patch": {
                "description": "Change user authenticated password",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "current_password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "rahasiaLama"
                                    },
                                    "new_password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "rahasiaBaru"
                                    }
                                },
                                "required": [
                                    "current_password",
                                    "new_password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Password changed successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "message": "Password has been changed successfully."
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation errors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "object",
                                            "properties": {
                                                "message": {
                                                    "current_password": [
                                                        "The current password is incorrect."
                                                    ],
                                                    "new_password": [
                                                        "The new password must be at least 8 characters."
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

{
    "openapi": "3.0.3",
    "info": {
        "title": "Courier API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "security": [
        {
            "BearerAuth": []
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "Courier": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "phone": {
                        "type": "string",
                        "example": "081234567890"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "available",
                            "unavailable"
                        ],
                        "example": "available"
                    }
                }
            },
            "CourierInput": {
                "type": "object",
                "required": [
                    "name",
                    "phone",
                    "status"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "available",
                            "unavailable"
                        ]
                    }
                }
            },
            "SuccessResponse": {
                "type": "object",
                "properties": {
                    "data": {
                        "$ref": "#/components/schemas/Courier"
                    },
                    "message": {
                        "type": "string"
                    },
                    "statusCode": {
                        "type": "integer"
                    }
                }
            },
            "SuccessResponseList": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Courier"
                        }
                    },
                    "message": {
                        "type": "string"
                    },
                    "statusCode": {
                        "type": "integer"
                    }
                }
            },
            "SuccessResponseMessage": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "message": {
                                "type": "string"
                            }
                        }
                    },
                    "statusCode": {
                        "type": "number"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "errors": {
                        "type": "string"
                    }
                }
            }
        },
        "parameters": {
            "pageParam": {
                "name": "page",
                "in": "query",
                "description": "Page number for pagination",
                "required": false,
                "schema": {
                    "type": "integer",
                    "default": 1
                }
            },
            "perPageParam": {
                "name": "per_page",
                "in": "query",
                "description": "Number of items per page",
                "required": false,
                "schema": {
                    "type": "integer",
                    "default": 10
                }
            }
        }
    },
    "paths": {
        "/api/courier": {
            "get": {
                "summary": "List all couriers",
                "tags": ["Courier"],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/pageParam"
                    },
                    {
                        "$ref": "#/components/parameters/perPageParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseList"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Courier"],
                "summary": "Create new courier",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CourierInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Courier created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/courier/{id}": {
            "get": {
                "tags": ["Courier"],
                "summary": "Get a courier by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Courier found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            },
            "patch": {
                "tags": ["Courier"],
                "summary": "Update a courier by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CourierInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Courier updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["Courier"],
                "summary": "Soft delete a courier",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Courier deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/courier/{id}/restore": {
            "patch": {
                "tags": ["Courier"],
                "summary": "Restore a soft deleted courier",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Courier restored",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/courier/{id}/force": {
            "delete": {
                "tags": ["Courier"],
                "summary": "Force delete a courier permanently",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Courier permanently deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/courier/trashed": {
            "get": {
                "tags": ["Courier"],
                "summary": "List soft deleted couriers",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/pageParam"
                    },
                    {
                        "$ref": "#/components/parameters/perPageParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Trashed couriers",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseList"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
